#ifndef INC_APP_MOTION_H_
#define INC_APP_MOTION_H_



class Servo {
public:


	Servo(TIM_HandleTypeDef  *ctrl, uint32_t min, uint32_t max, uint32_t center, void (*sysDelayMs)(void*));
	~Servo();
	bool turnLeft();
	bool turnRight();
	bool turnToPos(uint32_t count);

private:
	TIM_HandleTypeDef *htimer;
	uint32_t state;


};


#endif /* INC_APP_MOTION_H_ */
