#ifndef INC_APP_PARSER_H_
#define INC_APP_PARSER_H_

#include <cmsis_os.h>

namespace AppParser {

typedef struct
{
	osThreadId_t runner; // task handle
	osThreadAttr_t attr;
	struct {
		osMessageQueueId_t queue;
		//osMutexId_t lock;
	} mailbox; //

} u_ctx ; // struct containing context info for a  instance.

class Listener
{
public:
	Listener(u_ctx *ctx, uint8_t *buf);
	volatile void invoke();
	~Listener( void );
private:
	u_ctx *ctx;
	uint8_t *buf;
};

class Processor
{
public:
	Processor(u_ctx *ctx);

	void start();
	~Processor( void );
	u_ctx *ctx;
	static void processorTask(void *pv);
private:

	static void startImpl(void * _this); //unused
	template <T> // no type bounds enforcement, must be uint8_t, char etc.
	static bool isEq(const T &a, const T &b)
	{
		return a == b;
	}

};

typedef uint8_t BUF_CMP_t;
static constexpr BUF_CMP_t START_CHAR = 'x';


}




#endif /* INC_APP_PARSER_H_ */
